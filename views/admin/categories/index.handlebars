

<div class="row">
    <div class="col-sm-4">
        <h3><b>Create Category </b> </h3>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Name</label><br>
                <input type="text" name="name" id="name" class="form control col-sm-8" placeholder="Enter Title">             
            </div>
            <button class="btn btn-primary">Create Category</button>
        </form>
    </div>
    
    <div class="col-sm-8">
        <h3><b>Categories</b> </h3><br>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>