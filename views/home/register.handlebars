    <div class="card card-register mx-auto mt-5">

        

        {{#each errors}}
            <div class="alert alert-danger">
                {{message}} 
            </div>  
        {{/each}}

        <div class="card-header">Register an Account</div>
        <div class="card-body">
            <form action="/register" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="exampleInputName">First Name</label>
                            <input value="{{firstName}}" name="firstName" required placeholder="Enter First Name" class="form-control" id="exampleInputName" type="text">
                        </div>
                        <div class="col-md-6">
                            <label for="exampleInputLastName">Last Name</label>
                            <input value="{{lastName}}" name="lastName" required placeholder="Enter Last Name" class="form-control" id="exampleInputLastName" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail" class="mt-3">Email address</label>
                    <input value="{{email}}" name="email" required placeholder="Enter Email" class="form-control" id="exampleInputEmail" type="email" aria-checked="true">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 mt-3">
                            <label for="exampleInputPassword1">Password</label>
                            <input name="password" required placeholder="Enter Password" class="form-control" id="exampleInputPassword1" type="password">
                        </div>
                        <div class="col-md-6 mt-3">
                            <label for="exampleConfirmPassword">Confirm password</label>
                            <input name="passwordConfirm" required placeholder="Confirm password" class="form-control" id="exampleConfirmPassword" type="password">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Register</button>             
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/login">Login Page</a>
                {{!-- <a class="d-block small" href="/forgot-password">Forget Password?</a> --}}
                <a class="d-block small" href="/">Home Page?</a>
            </div>
        </div>
    </div>